                        <Insets top="48.0" />
                     </VBox.margin>
                  </Label>
                  <Label styleClass="Labels" stylesheets="@Style.css" text="Time:" />
                  <Label styleClass="Labels" stylesheets="@Style.css" text="Duration:" />
                  <Label styleClass="Labels" stylesheets="@Style.css" text="Number of People:">
