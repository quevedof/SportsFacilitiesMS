         <font>
            <Font name="Serif Bold" size="25.0" />
         </font>
      </Label>
      <Button fx:id="btnRemove" layoutX="209.0" layoutY="468.0" mnemonicParsing="false" onAction="#btnRemoveOnAction" prefHeight="37.0" prefWidth="138.0" style="-fx-background-radius: 20;" text="Remove Booking">
